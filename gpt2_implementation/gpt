  titles.append(data[i].title)
  lyric = "".join(data[i].lyrics)
  lyric = lyric.replace("\n ", "")
  lyric = lyric.replace("\n","",1)
  lyrics.append(lyric)

df_data = {
   'lyrics': lyrics,
   'title': titles
}
df = pd.DataFrame(df_data)

